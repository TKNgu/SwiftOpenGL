module SwiftOpenGL [system] {
  module glfw {
    header "/usr/local/include/GLFW/glfw3.h"
    link "/usr/local/lib/libglfw.so"
  }
  module gl {
    header "/usr/include/GL/gl.h"
    header "/usr/include/GL/glext.h"
    header "/usr/include/X11/X.h"
    header "/usr/include/GL/glx.h"
    link "GL"
  }
  export *
}
